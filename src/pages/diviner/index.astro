---
import Layout from '@layouts/Layout.astro';
import Header from "@components/Header.astro";
import Diviner from '@components/Diviner';
import '@styles/global.css';
import { Pages } from "@pages/pages.ts";

const { title, description } = Pages.diviner;
---
<Layout title={title} description={description}>
  <Header />
  <main>
    <Diviner client:only />
  </main>
 </Layout>
  <style>
    main {
      max-width: 900px;
      margin: 0 auto;
      padding: 1rem;
    }

    h1 {
      margin-bottom: 0.5rem;
    }

    :global(.form-group) {
      margin-bottom: 1rem;
    }

    :global(label) {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    :global(input, textarea) {
      width: 100%;
      padding: 0.5rem;
      font-family: inherit;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    :global(.section-inputs) {
      border: 1px solid #ddd;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 4px;
      background-color: #f9f9f9;
    }

    :global(button) {
      padding: 0.5rem 1rem;
      margin-right: 0.5rem;
      margin-bottom: 1rem;
      cursor: pointer;
      background-color: #4a5568;
      color: white;
      border: none;
      border-radius: 4px;
    }

    :global(button:hover) {
      background-color: #2d3748;
    }

    :global(button:disabled) {
      background-color: #a0aec0;
      cursor: not-allowed;
    }

    :global(.download-link, .download-btn) {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #38a169;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-left: 0.5rem;
    }

    :global(.download-link:hover, .download-btn:hover) {
      background-color: #2f855a;
    }

    :global(.preview-controls) {
      margin-bottom: 1rem;
    }
  </style>
