---
import Layout from "@layouts/Layout.astro";
import CardGrid from "@components/CardGrid.astro";
import '@styles/global.css'
import { PageIDs, Pages } from '@pages/pages';
---
<Layout title="Theo's home">
    <main>
        <h1>Hi! I'm Theo ðŸ‘‹</h1>
        <CardGrid cards={
            PageIDs.map((href) => {
                const page = Pages[href];
                return {
                    title: page.title,
                    body: page.description,
                    href
                }
            })
        }/>
    </main>
</Layout>
<style>
    main {
        max-width: 600px;
        width: 50vw;;
        margin: 0 auto;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--surface);
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 3rem;
        text-align: center;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
    }
</style>
