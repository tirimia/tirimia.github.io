---
import { getCollection } from "astro:content";
import BlogLayout from "@layouts/Blog.astro";

const articles = (await getCollection("articles")).sort((lhs,rhs) => rhs.data.publishedAt.valueOf() - lhs.data.publishedAt.valueOf())

// TODO: add paging when I have more articles
---
<BlogLayout title="Blog">
    <main>
        <h1>Personal blog</h1>
        <h2>I just write about things, hope you get some value out of it too</h2>
        <div class="blog-list">
        { articles.slice(0,5).map((article) =>
            <article class="blog-card">
                <a href={`/blog/${article.slug}`}>
                    <span class="blog-title">{article.data.title}</span>
                    <span class="blog-date">{article.data.publishedAt.toISOString().slice(0,10)}</span>
                </a>
            </article>)
        }
        </div>
    </main>
</Layout>
<style>
    .blog-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
    max-width: 800px;
}

.blog-card {
    background: var(--surface-alt);
    padding: 1.5rem;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-shadow: rgba(15, 23, 42, 0.15) 0px 8px 20px,
                rgba(15, 23, 42, 0.25) 0px 6px 12px;
}

.blog-card:hover {
    transform: translateY(-3px);
    box-shadow: rgba(15, 23, 42, 0.2) 0px 12px 24px,
                rgba(15, 23, 42, 0.3) 0px 8px 16px;
}

.blog-card a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
}

.blog-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary);
}

.blog-date {
    font-size: 0.875rem;
    color: var(--secondary);
    white-space: nowrap;
}
</style>
