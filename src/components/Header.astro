---
import { GithubIcon, LinkedInIcon } from '@components/icons';
import NavigationLink from '@components/NavigationLink.astro';

const links = [
    { href: "/blog", text: "Blog" },
    { href: "/azubinomicon", text: "Azubinomicon" }
];
---
<header>
        <a href="/" class="brand">
            <span class="name">tirimia</span>
        </a>
        <nav class="links">
            {links.map(link => (
                <NavigationLink href={link.href} text={link.text} />
            ))}
        </nav>
        <div class="social">
            <a href="https://github.com/tirimia" target="_blank" rel="noopener noreferrer" class="social-link">
                <Fragment set:html={GithubIcon} />
            </a>
            <a href="https://linkedin.com/in/tirimia" target="_blank" rel="noopener noreferrer" class="social-link">
                <Fragment set:html={LinkedInIcon} />
            </a>
        </div>
</header>
<style>
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;

        padding: 1rem;
        margin-inline: 2rem;
        border-bottom: 1px solid var(--secondary);
    }

    @media (max-width: 768px) {
        header {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        .social {
            order: 2;
        }
    }

    .brand {
        text-decoration: none;
    }

    .name {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary);
    }

    .links {
        display: flex;
        gap: 2rem;
        flex: 1;
        justify-content: center;
    }

    .social {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        color: var(--secondary);
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
    }

    .social-link:hover {
        color: var(--accent);
    }
</style>
