---
interface Props {
    title: string;
    body: string;
    href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
    <a href={href}>
        <div class="content">
            <h2>
                {title}
            </h2>
            <p>
                {body}
            </p>
        </div>
        <div class="highlight-bar"></div>
    </a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        background-color: var(--surface);
        border-radius: 1rem;
        border: 1px solid rgba(15, 23, 42, 0.1);
        box-shadow:
            0 4px 6px -1px rgba(15, 23, 42, 0.1),
            0 2px 4px -2px rgba(15, 23, 42, 0.05),
            0 0 0 1px rgba(15, 23, 42, 0.02);
        transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
        position: relative;
        overflow: hidden;
    }

    .link-card:hover {
        transform: translateY(-4px);
        box-shadow:
            0 12px 20px -6px rgba(15, 23, 42, 0.15),
            0 4px 8px -4px rgba(15, 23, 42, 0.1),
            0 0 0 1px rgba(15, 23, 42, 0.02);
        background-color: var(--surface-alt);
    }

    .link-card a {
        display: flex;
        width: 100%;
        text-decoration: none;
        padding: 1.75rem;
        position: relative;
    }

    .content {
        flex: 1;
    }

    .link-card h2 {
        font-size: 1.4rem;
        color: var(--primary);
        margin: 0 0 0.75rem 0;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .link-card p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--secondary);
        margin: 0;
    }

    .highlight-bar {
        position: absolute;
        left: 0;
        top: 0;
        width: 5px;
        height: 100%;
        background: var(--accent);
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .link-card:hover .highlight-bar {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .link-card {
            border-radius: 0.75rem;
        }

        .link-card a {
            padding: 1.25rem;
        }

        .link-card h2 {
            font-size: 1.2rem;
        }
    }
</style>
